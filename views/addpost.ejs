<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-sm">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input required class="block w-1/3 py-3 " type="file" name="postimage">
        <input required class="block w-1/3 px-3 py-3 mt-2 rounded-md border-2 text-black" type="text" placeholder="Title" name="title">
        <textarea class="block h-40 w-1/3 px-3 py-3 mt-2 rounded-lg border-2 text-black" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-3 mt-2 bg-red-700 rounded-lg " type="submit" value="Create Post">
    </form>
</div>
<% include ./partials/footer.ejs %>